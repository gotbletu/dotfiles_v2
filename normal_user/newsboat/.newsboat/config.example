bind-key Q quit
bind-key ^q hard-quit
bind-key m toggle-show-read-feeds
bind-key ^D pagedown
bind-key ^U pageup
# bind-key / open-search tagselection
# bind-key / open-search
bind-key g home all
bind-key G end all

# FPS style navigation (left hand jutsu)
